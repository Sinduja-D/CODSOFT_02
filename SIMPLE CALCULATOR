#include <iostream>

int main() {
    double num1, num2;
    char op;

    std::cout << "Enter first number: ";
    std::cin >> num1;

    std::cout << "Enter second number: ";
    std::cin >> num2;

    std::cout << "Enter the operation (+ for addition, - for subtraction, * for multiplication, / for division): ";
    std::cin >> op;

    switch(op) {
        case '+':
            std::cout << "Your Result Is: " << num1 + num2 << std::endl;
            break;
        case '-':
            std::cout << "Your Result Is: " << num1 - num2 << std::endl;
            break;
        case '*':
            std::cout << "Your Result Is: " << num1 * num2 << std::endl;
            break;
        case '/':
            if (num2 != 0) {
                std::cout << "Your Result Is: " << num1 / num2 << std::endl;
            } else {
                std::cout << "Oops!! You are dividing it by zero." << std::endl;
            }
            break;
        default:
            std::cout << "Invalid operation." << std::endl;
    }

    return 0;
}
